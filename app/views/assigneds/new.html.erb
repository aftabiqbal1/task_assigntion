  </div> -->

  <div class="form-group">
    <%= f.label :Select_Task%>
    <%= select("task", "task_id", current_user.tasks.all.collect{ |x| [ x.description, x.id ]})%>
  </div>

  <div class="form-group">
    <%= f.label :Staff_member%>
    <%= select("user", "user_id", User.all.collect { |x| [ x.first_name, x.id ] })%>
  </div>

  <div class="form-group">
    <%= f.submit "Assign Task", class: "btn btn-primary"%>
  </div>
<%end%>

