<!DOCTYPE html>
<html>
<div class="container">
  <head>
    <title>TestApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
  <%= render partial: "shared/navbar" %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% if user_signed_in? %>  
      <div> <b>Logged in as: </b>
        <%= current_user.email %>  
      </div>
      <br>
      <%= button_to 'Log out', destroy_user_session_path, method: :delete %>
      <% if current_user.role == "admin"%>
      <br>
        <%= link_to 'Add Task', add_task_path%>
      <%end%>
    <% else %>
      <%= link_to 'Sign in', new_user_session_path%>
      <%= link_to 'Sign up', new_user_registration_path%>
    <% end %>
    
    <br>
    <% if user_signed_in? && current_user.role == 'admin'%> 
    <%= link_to 'View Tasks', show_admin_tasks_path%>
    <br>
    <%= link_to 'Assign Task', assign_task_path%>
    <%end%>
    <% if user_signed_in? && current_user.role == 'staff'%> 
    <%= link_to 'View Tasks', show_staff_tasks_path%>
    <%end%>
    <%= yield %>
  </body>
</html>
</div>